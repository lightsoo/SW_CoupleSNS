<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="swmaestro.lightsoo.game.Event.InfoEventActivity"
    tools:showIn="@layout/activity_info_event">

    <RelativeLayout
        android:background="@color/colorPrimartLight"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/relativeLayout4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="타이틀"
                android:id="@+id/tv_info_event_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소"
                android:id="@+id/tv_info_event_place"
                android:layout_below="@+id/tv_info_event_title"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout4">

        <GridView
            android:id="@+id/event_info_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:numColumns="3"
            android:layout_alignParentBottom="true">
        </GridView>


    </RelativeLayout>
</RelativeLayout>
